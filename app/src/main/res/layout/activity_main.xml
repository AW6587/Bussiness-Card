<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_weight="3"
        android:src="@drawable/tiny_home" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:layout_weight="1"
        android:text="Birch Tiny Homes"
        android:textColor="#222121"
        android:textSize="44sp"
        app:fontFamily="serif" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="20sp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:text="Family operated business building custom tiny homes since 2010"
        android:textColor="#222121" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_weight="1"
        android:background="#00FFFFFF"
        android:drawableLeft="@drawable/icon_web"
        android:drawablePadding="10dp"
        android:text="https://www.birchhomes.com"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_weight="1"
        android:background="#00FFFFFF"
        android:drawableLeft="@drawable/icon_phone"
        android:drawablePadding="10dp"
        android:text="(123)456-7890"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_weight="1"
        android:background="#00FFFFFF"
        android:drawableLeft="@drawable/icon_map"
        android:drawablePadding="10dp"
        android:text="12345 NE 89th Street"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="40dp"
        android:layout_weight="1"
        android:background="#00FFFFFF"
        android:drawableLeft="@drawable/icon_time"
        android:drawablePadding="10dp"
        android:inputType="datetime"
        android:text="Mon - Fri     9am - 5pm"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/wood_border"
        android:scaleType="centerCrop"
        android:layout_weight="1"/>

</LinearLayout>